#!/usr/bin/env bash
#Setting the Loadbalancer HAProxy & Frontend
sudo apt-get -y update
sudo apt-get -y install software-properties-common
sudo add-apt-repository -y ppa:vbernat/haproxy-1.5
sudo apt-get -y update
sudo apt-get -y install haproxy=1.5.\*
echo "frontend http_front
         bind *:80
         default_backend http_rear" | sudo tee /etc/haproxy/haproxy.cfg
echo "backend http_rear
         balance roundrobin
            server web1 35.29.25.153:80 check
            server web2 34.73.159.23:80 check" | sudo tee /etc/haproxy/haproxy.cfg
sudo service haproxy start
